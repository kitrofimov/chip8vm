{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug interpreter",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/target/debug/interpreter",
      "args": ["${workspaceFolder}/roms/ibmlogo.ch8"],
      "cwd": "${workspaceFolder}",
      "sourceLanguages": ["rust"]
    },
    {
      "name": "Debug assembler",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/target/debug/assembler",
      "args": [
        "${workspaceFolder}/roms/simple_drawing.asm",
        "${workspaceFolder}/roms/simple_drawing.ch8"
      ],
      "cwd": "${workspaceFolder}",
      "sourceLanguages": ["rust"]
    },
  ]
}